{% extends "form.njk" %}

{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/textarea/macro.njk" import govukTextarea %}

{% block beforeForm %}
  <h1 class="govuk-heading-l">Details of the smell</h1>
{% endblock %}

{% block form %}
  <div id="details-of-the-smell">
    {{ govukTextarea(fields.smellDescription) }}
    {{ govukInput(fields.dateOfSmell) }}
    {{ govukInput(fields.timeOfSmell) }}
  </div>
{% endblock %}
